<div class="posts">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-item">
        <%= post.id %>
        <%= post.uuid %>
        <%= post.content %>
        <%# 第三引数でpostリクエストを指定する %>
        <%# linl_toだとGETでエラー発生する button_toで代替する %>
        <%= button_to("削除","/user_destroy/#{post.id}", {method: "delete"}) %>
      </div>
    <% end %>
  </div>
</div>
